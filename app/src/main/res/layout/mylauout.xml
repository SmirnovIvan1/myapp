<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="170dp" android:id="@+id/relative">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="170dp" android:layout_alignParentTop="true" android:layout_toRightOf="@+id/relative"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:id="@+id/relative2">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="340dp" android:layout_alignParentBottom="true"
            android:layout_below="@+id/relative" android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" android:id="@+id/reletive3">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="170dp" android:layout_below="@+id/relative"
            android:layout_toRightOf="@+id/reletive3" android:id="@+id/relative4" android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="170dp" android:layout_below="@+id/relative4"
            android:id="@+id/reletive5" android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/reletive3" android:layout_toLeftOf="@+id/reletive6">
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="125dp"
            android:layout_height="170dp" android:layout_below="@+id/relative4"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true" android:id="@+id/reletive6"
            android:layout_alignParentBottom="true">
    </RelativeLayout>
</RelativeLayout>